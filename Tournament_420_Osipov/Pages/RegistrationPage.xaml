<Page x:Class="Tournament_420_Osipov.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_420_Osipov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <StackPanel Name="Container" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Имя пользователя</TextBlock>
            <TextBox Name="LoginTBx" Width="200" Height="30"></TextBox>
            <TextBlock>Пароль</TextBlock>
            <PasswordBox Name="PasswordTBx" Width="200" Height="30"></PasswordBox>
            <TextBlock>Повторите пароль</TextBlock>
            <PasswordBox Name="RePasswordTBx" Width="200" Height="30"></PasswordBox>
            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                <Button Name="RegistrationBtn" Width="120" Click="RegistrationBtn_Click">Зарегистрироваться</Button>
                <Button Name="LoginBtn" Width="80" Click="LoginBtn_Click">Войти</Button>
            </StackPanel>
            <TextBlock Name="ErrorTBk"></TextBlock>
        </StackPanel>
    </Grid>
</Page>
