<Page x:Class="Tournament_420_Osipov.Pages.PlayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_420_Osipov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlayerPage">

    <Grid>


        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="0 10 0 0" Name="PlayerInfoTBk"></TextBlock>
            <TextBlock Name="PlayerStatsTBk" Grid.Row="1"></TextBlock>
            <Button Width="250" Height="30" Name="TournamentRegistrationBtn" Click="TournamentRegistrationBtn_Click">Зарегистрироваться на турнир</Button>
            <Button Margin="0 10 0 0" Name="BackBtn" Width="100" Height="30" Click="BackBtn_Click">Назад</Button>
        </StackPanel>
        
    </Grid>
</Page>
