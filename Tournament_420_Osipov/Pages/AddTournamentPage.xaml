<Page x:Class="Tournament_420_Osipov.Pages.AddTournamentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_420_Osipov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddTournamentPage">

    <Grid>
        <StackPanel Name="Container" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Название турнира</TextBlock>
            <TextBox Name="NameTBx" Width="200" Height="30"></TextBox>
            <TextBlock>Дата проведения (01.01.2024)</TextBlock>
            <TextBox Name="DateTBx" Width="200" Height="30"></TextBox>
            <TextBlock>Время начала</TextBlock>
            <TextBox Name="DateTBx" Width="200" Height="30"></TextBox>
        </StackPanel>
    </Grid>
</Page>
